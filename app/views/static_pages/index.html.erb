<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Todoozy</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" media="screen" href="./assets/vendor.css">
    <link rel="stylesheet" media="screen" href="./assets/todoozy.css">
  </head>
  <body ng-app="todoozyApp">
    <div class="content-wrapper full-height" ng-controller="ToolbarController">
      <div ng-if="showLogin=='display'">
        <ul class="no-padding" ui-view="full" autoscroll="false"></ul>
      </div>
      <div class="full-height" ng-if="showLogin!='display'">
        <div class="navbar-container">
          <div id="navbar" class="navbar" role="navigation">
            <div class="navbar-header">
              <a id="navbar_home" class="navbar-brand" ui-sref="dashboard">ToDoozy</a>
            </div>
            <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                <li class="logged_in">
                  <p class="navbar-text">
                    <span class="visible-lg-inline-block">You are currently logged in as <strong ng-bind="username"></strong></span>
                    <i class="fa fa-user"></i>
                  </p>
                </li>
                <li class="divider"></li>
                <li class="logout">
                  <a href ng-click="logout()" title="Log Out"><i class="fa fa-power-off"></i></a>
                </li>
              </ul>
            </div>

          </div>
          <div id="top_toolbar">
            <ul>
              <li>
                <a ui-sref="items">
                  <i class="fa fa-laptop"></i>
                  Home
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="info-header-main">
          <todoozy-info-header>
        </div>

        <div id="container" ui-view="main" autoscroll="false">
        </div>
      </div>
    </div> <!-- /content-wrapper -->

  <script src="https://code.createjs.com/createjs-2015.11.26.min.js"></script>
  <script src="./assets/vendor.js"></script>
  <script src="./assets/views/partials.js"></script>
  <script src="./assets/bundle.es6.js"></script>
</body>
</html>
